<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/zikr_activity_layout">

    <RelativeLayout
        android:id="@+id/layeventHeader"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_centerHorizontal="true"
        android:background="@color/list_header_colour">

        <TextView
            android:id="@+id/txtEventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:text="Name"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Total Count"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTarget"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="6dip"
            android:gravity="right"
            android:text="Target"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lstListSwalathItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layeventHeader"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

